{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@themes/*": ["src/themes/*"],
      "@screens/*": ["src/screens/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["src/assets/*"],
      "@store/*": ["src/store/*"],
      "@types/*": ["src/types/*"],
    }
  },
  "include": [
    "./src/**/*",
    "index.js",
    "index.ts",
    "d.ts",
],
  "exclude": [
    "node_modules", 
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}